<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:andriod="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/container_image_foto_guest"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        andriod:ignore="MissingConstraints"
        android:animationCache="false">

        <ImageView
            android:id="@+id/imageProperty_guest"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            andriod:srcCompat="@drawable/image_casas_template"
            andriod:ignore="ContentDescription" />

        <TextView
            android:id="@+id/info_de_la_casa_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="100dp"
            android:text="aqui debe ir la info"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnRentHouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alquila Casa"
            android:layout_below="@+id/info_de_la_casa_guest"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/rojo_de_la_app"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>